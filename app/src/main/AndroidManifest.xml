<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Fitness Shark"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppBanHang">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User-facing Activities -->
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProductDetailActivity" />
        <activity android:name=".NotiActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".WishlistActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".AddressFormActivity" />
        <activity android:name=".AddressListActivity" />
        <activity android:name=".MyOrdersActivity" />

        <!-- Admin-facing Activities -->
        <activity android:name=".AdminHomeActivity" />
        <activity android:name=".ManageProductsActivity" />
        <activity android:name=".AddEditProductActivity" />
        <activity android:name=".AdminUserManagementActivity" />

    </application>

</manifest>