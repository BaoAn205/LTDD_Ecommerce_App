<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Crew"
        android:textColor="#333333"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create your account to start building your home gym"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/labelName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputName1"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="you@example.com"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/labelEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="emailAddress" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_email"
        android:layout_marginEnd="16dp"
        app:tint="#666666"
        app:layout_constraintEnd_toEndOf="@id/inputName1"
        app:layout_constraintTop_toTopOf="@id/inputName1"
        app:layout_constraintBottom_toBottomOf="@id/inputName1"
        android:contentDescription="Email Icon" />

    <TextView
        android:id="@+id/labelFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputName1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputName2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Enter your full name"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/labelFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="name" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_person"
        android:layout_marginEnd="16dp"
        app:tint="#666666"
        app:layout_constraintEnd_toEndOf="@id/inputName2"
        app:layout_constraintTop_toTopOf="@id/inputName2"
        app:layout_constraintBottom_toBottomOf="@id/inputName2"
        android:contentDescription="Person Icon" />

    <TextView
        android:id="@+id/labelUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputName2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputName3"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Choose a username"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/labelUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="username" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_at"
        android:layout_marginEnd="16dp"
        app:tint="#666666"
        app:layout_constraintEnd_toEndOf="@id/inputName3"
        app:layout_constraintTop_toTopOf="@id/inputName3"
        app:layout_constraintBottom_toBottomOf="@id/inputName3"
        android:contentDescription="At Sign Icon" />

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputName3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputName4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Enter a secure password"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/labelPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="password" />

    <ImageView
        android:id="@+id/passwordToggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_eye"
        android:layout_marginEnd="16dp"
        app:tint="#666666"
        app:layout_constraintEnd_toEndOf="@id/inputName4"
        app:layout_constraintTop_toTopOf="@id/inputName4"
        app:layout_constraintBottom_toBottomOf="@id/inputName4"
        android:contentDescription="Password visibility toggle" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#ff8000"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputName4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/logInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="#ff8000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>