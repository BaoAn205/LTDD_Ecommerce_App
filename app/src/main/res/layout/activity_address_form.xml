<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/formTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Địa Chỉ Mới"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/inputReceiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người nhận"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/inputPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/inputStreetAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ (Số nhà, đường)"
            android:inputType="textPostalAddress"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/inputCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tỉnh/Thành phố, Quận/Huyện"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <Switch
            android:id="@+id/switchDefaultAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Đặt làm địa chỉ mặc định"
            android:textSize="16sp"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnSaveAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="LƯU ĐỊA CHỈ"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>