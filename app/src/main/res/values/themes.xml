<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppBanHang" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>
        <item name="colorSecondary">@color/dark_primary_accent</item>
        <item name="colorSecondaryVariant">@color/dark_primary_accent</item>
        <item name="colorOnSecondary">@color/dark_text_primary</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.AppBanHang" parent="Base.Theme.AppBanHang" />

    <!-- Styles for Product Detail Attributes -->
    <style name="Widget.App.AttributeItemLayout" parent="">
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.App.AttributeIcon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">null</item>
        <item name="tint">#0062FF</item>
    </style>

    <style name="Widget.App.AttributeTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#1E2022</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.AttributeValue" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#77797A</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>